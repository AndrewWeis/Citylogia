<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".place_info"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_back_v3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="@string/name_main"
                    android:textColor="@color/blackPrimary"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/title_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="start"
                android:text="Название места"

                android:textColor="@color/blackPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_gravity="start"

                    app:srcCompat="@drawable/gps" />

                <TextView
                    android:id="@+id/address_v3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:gravity="start"

                    android:text="Улица несбывшихся мечтаний, 99a"
                    android:textColor="@color/blackPrimary"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/picture11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but_info"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:clickable="true"
                    android:text="Информация"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/but_reviews"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:clickable="true"
                    android:text="Отзывы"
                    android:textAllCaps="false"
                    android:textColor="@color/blackPrimary"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:lineSpacingExtra="4dp"
                android:text="@string/text_info"
                android:textColor="@color/blackPrimary"
                android:textSize="14sp"
                android:textStyle="normal" />
          
        </LinearLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_place_30"
                    android:tint="@color/colorAccent" />

                <ImageButton

                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/user__2_"
                    android:tint="@color/graySecondary" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>