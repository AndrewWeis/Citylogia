<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceInside">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="56dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/graySecondary"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:orientation="horizontal">
    </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="57dp"

        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:orientation="horizontal">

            <com.mancj.materialsearchbar.MaterialSearchBar
                android:id="@+id/searchBar"
                android:layout_gravity=""
                app:mt_searchIconTint="@color/colorAccent"
                style="@style/MaterialSearchBarLight"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:mt_hint="Search an interesting place"
                app:mt_placeholderColor="@color/graySecondary"
                app:mt_maxSuggestionsCount="10"
                app:mt_placeholder=""
                app:mt_roundedSearchBarEnabled="true"
                app:mt_speechMode="false"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/bt_filter"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/custom_button_filter"
                android:radius="10dp"
                android:text="Фильтр"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_place_30"
                    android:tint="@color/colorAccent" />

                <ImageButton

                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:src="@drawable/user__2_"
                    android:tint="@color/graySecondary" />

            </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>